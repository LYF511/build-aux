# -*- makefile -*-
# Prepare build-aux dist.

srcdir ?= @srcdir@

all : 

PACKAGE ?= @PACKAGE_NAME@
VERSION ?= @PACKAGE_VERSION@

DIST_NAME = $(PACKAGE)-$(VERSION)

DISTFILES = \
	configure.ac COPYING Makefile.devel Makefile.in README.md update-autoconf-build-aux.sh \
	autoconf/missing \
	autoconf/config.sub \
	autoconf/compile \
	autoconf/config.guess \
	autoconf/ltmain.sh \
	autoconf/install-sh \
	autoconf/ar-lib \
	autoconf/mkinstalldirs \
	util-i18n/ChangeLog util-i18n/COPYING util-i18n/lang_file_format.txt util-i18n/README.md \
	util-i18n/getmsg.ps1 util-i18n/getmsg.sh util-i18n/ilang.ps1 util-i18n/ilang.sh \
	util-i18n/lang/de_AT.ilang.gm util-i18n/lang/en_US.ilang.gm util-i18n/lang/fr_FR.ilang.gm util-i18n/lang/hi_IN.ilang.gm util-i18n/lang/ja_JP.ilang.gm util-i18n/lang/ko_KR.ilang.gm util-i18n/lang/ru_RU.ilang.gm util-i18n/lang/zh_CN.ilang.gm util-i18n/lang/zh_TW.ilang.gm	

distdir : $(DISTFILES)
	for file in $(DISTFILES); do \
		if test -f $$file; then dir='.'; else dir='$(srcdir)'; fi; \
		distdir=`echo '$(distdir)'/$$file | sed -e 's|//*[^/]*$$||'`; \
		test -d "$$distdir" || mkdir -p "$$distdir" > /dev/null; \
		cp -rp "$$dir/$$file" '$(distdir)'/$$file || exit 1; \
	done

dist :
	abstmpdistdir=`pwd`/$(DIST_NAME) \
		&& mkdir -p $$abstmpdistdir \
		&& $(MAKE) distdir distdir="$$abstmpdistdir"

clean : 
	$(RM) -rf $(DIST_NAME)*
	$(RM) -f config.log config.status
